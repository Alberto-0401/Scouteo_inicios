<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javafx.scouteo.controller.RankingController"
      spacing="15" prefWidth="850" prefHeight="600">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="RANKING DE JUGADORES" HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <Separator/>
    
    <!-- Filtros -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Ordenar por:"/>
        <ComboBox fx:id="cmbOrdenar" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Goles"/>
                    <String fx:value="Asistencias"/>
                    <String fx:value="Partidos Jugados"/>
                    <String fx:value="Promedio Goles"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="PosiciÃ³n:"/>
        <ComboBox fx:id="cmbPosicion" prefWidth="150">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Todas"/>
                    <String fx:value="POR"/>
                    <String fx:value="DEF"/>
                    <String fx:value="MED"/>
                    <String fx:value="DEL"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Button text="Aplicar Filtros" onAction="#aplicarFiltros"/>
    </HBox>
    
    <!-- Tabla de ranking -->
    <TableView fx:id="tablaRanking" prefHeight="450">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colPosicion" text="#" prefWidth="35" maxWidth="40"/>
            <TableColumn fx:id="colNombre" text="Jugador" prefWidth="150"/>
            <TableColumn fx:id="colDorsal" text="Dor" prefWidth="45" maxWidth="50"/>
            <TableColumn fx:id="colPosicionJuego" text="Pos." prefWidth="50"/>
            <TableColumn fx:id="colPartidos" text="Part." prefWidth="50"/>
            <TableColumn fx:id="colGoles" text="Goles" prefWidth="55"/>
            <TableColumn fx:id="colAsistencias" text="Asist." prefWidth="60"/>
            <TableColumn fx:id="colPromedio" text="Prom." prefWidth="60"/>
        </columns>
    </TableView>
    
    <Label fx:id="lblTotal" text="Mostrando 0 jugadores"/>
    
</VBox>