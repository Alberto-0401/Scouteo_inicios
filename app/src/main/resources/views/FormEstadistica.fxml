<?xml version="1.0" encoding="UTF-8"?>
<!-- 3. FormEstadistica.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javafx.scouteo.controller.FormEstadisticaController"
      spacing="15" prefWidth="550" prefHeight="600" stylesheets="@../scouteo.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="tituloFormEstadistica" text="REGISTRAR ESTADÍSTICAS DE PARTIDO"/>

    <Separator fx:id="separadorFormEst1"/>

    <ScrollPane fitToWidth="true">
        <VBox spacing="12">

            <!-- Selección de jugador -->
            <Label fx:id="subtituloJugador" text="Jugador"/>

            <HBox fx:id="selectorJugadorEstBox" spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="lblSeleccionar" text="Seleccionar:"/>
                <ComboBox fx:id="cmbJugador" promptText="Elegir jugador..." prefWidth="300"/>
                <Label fx:id="lblPosicionJugador" text=""/>
            </HBox>

            <Separator fx:id="separadorFormEst2"/>

            <!-- Datos del partido -->
            <Label fx:id="subtituloDatosPartido" text="Datos del Partido"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Fecha del Partido *"/>
                    <DatePicker fx:id="dpFecha" prefWidth="200"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Rival *"/>
                    <TextField fx:id="txtRival" promptText="Ej: Real Madrid Benjamín" prefWidth="260"/>
                </VBox>
            </HBox>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Resultado"/>
                    <TextField fx:id="txtResultado" promptText="Ej: 2-1" prefWidth="100"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Minutos Jugados *"/>
                    <TextField fx:id="txtMinutos" promptText="0-90" prefWidth="100"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- Estadísticas generales -->
            <Label fx:id="subtituloEstGenerales" text="Estadísticas Generales"/>

            <GridPane hgap="10" vgap="10">
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Goles"/>
                    <TextField fx:id="txtGoles" text="0" prefWidth="80"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Asistencias"/>
                    <TextField fx:id="txtAsistencias" text="0" prefWidth="80"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Tarjetas Amarillas"/>
                    <TextField fx:id="txtAmarillas" text="0" prefWidth="80"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Tarjetas Rojas"/>
                    <TextField fx:id="txtRojas" text="0" prefWidth="80"/>
                </VBox>
            </GridPane>

            <Separator/>

            <!-- Estadísticas específicas por posición -->
            <VBox fx:id="vboxEspecificas" spacing="10">
                <Label fx:id="subtituloEstEspecificas" text="Estadísticas Específicas"/>

                <!-- Paradas (solo porteros) -->
                <HBox fx:id="hboxParadas" spacing="5" visible="false" managed="false">
                    <VBox spacing="5">
                        <Label text="Paradas *"/>
                        <TextField fx:id="txtParadas" text="0" prefWidth="100"/>
                    </VBox>
                </HBox>

                <!-- Recuperaciones (defensas y medios) -->
                <HBox fx:id="hboxRecuperaciones" spacing="5" visible="false" managed="false">
                    <VBox spacing="5">
                        <Label text="Recuperaciones"/>
                        <TextField fx:id="txtRecuperaciones" text="0" prefWidth="100"/>
                    </VBox>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Valoración -->
            <Label fx:id="subtituloValoracion" text="Valoración del Rendimiento"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Valoración (0-10) *"/>
                    <TextField fx:id="txtValoracion" promptText="Ej: 7.5" prefWidth="100"/>
                </VBox>
                <Label fx:id="lblValoracion" text="Sin valorar"/>
            </HBox>

        </VBox>
    </ScrollPane>

    <Separator/>

    <!-- Botones -->
    <HBox fx:id="botonesFormEstadistica" spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="lblError" text="" prefWidth="320"/>
        <Button fx:id="btnCancelarFormEst" text="Cancelar" onAction="#cancelar" prefWidth="100"/>
        <Button fx:id="btnGuardarFormEst" text="Guardar" onAction="#guardar" prefWidth="100"/>
    </HBox>

</VBox>
