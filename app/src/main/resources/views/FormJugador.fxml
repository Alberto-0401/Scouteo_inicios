<?xml version="1.0" encoding="UTF-8"?>
<!-- 2. FormJugador.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javafx.scouteo.controller.FormJugadorController"
      spacing="15" prefWidth="500" prefHeight="550">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Label fx:id="lblTitulo" text="NUEVO JUGADOR"/>

    <Separator/>

    <!-- Formulario -->
    <ScrollPane fitToWidth="true">
        <VBox spacing="12">

            <!-- DATOS PERSONALES -->
            <Label text="Datos Personales"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Nombre *"/>
                    <TextField fx:id="txtNombre" promptText="Ej: Juan" prefWidth="225"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Apellidos *"/>
                    <TextField fx:id="txtApellidos" promptText="Ej: García López" prefWidth="225"/>
                </VBox>
            </HBox>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Fecha de Nacimiento *"/>
                    <DatePicker fx:id="dpFechaNacimiento" prefWidth="200"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Dorsal *"/>
                    <TextField fx:id="txtDorsal" promptText="1-99" prefWidth="80"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- DATOS DEPORTIVOS -->
            <Label text="Datos Deportivos"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Posición *"/>
                    <ComboBox fx:id="cmbPosicion" prefWidth="225">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="POR"/>
                                <String fx:value="DEF"/>
                                <String fx:value="MED"/>
                                <String fx:value="DEL"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <VBox spacing="5">
                    <Label text="Categoría *"/>
                    <ComboBox fx:id="cmbCategoria" prefWidth="225">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Benjamín"/>
                                <String fx:value="Alevín"/>
                                <String fx:value="Infantil"/>
                                <String fx:value="Cadete"/>
                                <String fx:value="Juvenil"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
            </HBox>

            <Separator/>

            <!-- DATOS FÍSICOS -->
            <Label text="Datos Físicos (Opcionales)"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Altura (cm)"/>
                    <TextField fx:id="txtAltura" promptText="Ej: 145.5" prefWidth="120"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Peso (kg)"/>
                    <TextField fx:id="txtPeso" promptText="Ej: 35.2" prefWidth="120"/>
                </VBox>
            </HBox>

            <Separator/>

            <!-- FOTOGRAFÍA -->
            <Label text="Fotografía (Opcional)"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Seleccionar Imagen" onAction="#seleccionarFoto"/>
                <Label fx:id="lblNombreFoto" text="Ninguna imagen seleccionada"/>
            </HBox>

        </VBox>
    </ScrollPane>

    <!-- Botones de acción -->
    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="lblError" text="" prefWidth="260"/>
        <Button text="Cancelar" onAction="#cancelar" prefWidth="100"/>
        <Button text="Guardar" onAction="#guardar" prefWidth="100"/>
    </HBox>

</VBox>
