<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="588.0" prefWidth="800" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.scouteo.controller.EstadisticasJugadorController">
    <padding>
        <javafx.geometry.Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox fx:id="headerEstadisticasJugador" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="tituloEstadisticasJugador" prefHeight="18.0" prefWidth="626.0" text="ESTADÍSTICAS POR JUGADOR" />
        <Button fx:id="btnVolverEstadisticas" onAction="#volverDashboard" prefHeight="26.0" prefWidth="115.0" text="← Volver" />
    </HBox>

    <Separator fx:id="separadorEstadisticas1" />

    <!-- Selector de jugador -->
    <HBox fx:id="selectorJugadorBox" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblSeleccionarJugador" text="Seleccionar Jugador:" />
        <ComboBox fx:id="cmbJugador" prefWidth="250" promptText="Elige un jugador..." />
        <Button fx:id="btnCargarEstadisticas" onAction="#cargarEstadisticas" text="Cargar Estadísticas" />
    </HBox>

    <!-- Tabla de estadísticas -->
    <Label fx:id="lblHistorialPartidos" text="Historial de Partidos" />

    <TableView fx:id="tablaEstadisticas" prefHeight="300">
        <columns>
            <TableColumn fx:id="colFecha" prefWidth="90" text="Fecha" />
            <TableColumn fx:id="colRival" prefWidth="130" text="Rival" />
            <TableColumn fx:id="colResultado" prefWidth="70" text="Resultado" />
            <TableColumn fx:id="colMinutos" prefWidth="54.39996337890625" text="Min" />
            <TableColumn fx:id="colGoles" prefWidth="56.00006103515625" text="Goles" />
            <TableColumn fx:id="colAsistencias" prefWidth="60" text="Asist." />
            <TableColumn fx:id="colTarjetasA" prefWidth="69.60003662109375" text="T.A." />
            <TableColumn fx:id="colTarjetasR" prefWidth="81.59991455078125" text="T.R." />
            <TableColumn fx:id="colAcciones" prefWidth="147.199951171875" text="Acciones" />
        </columns>
    </TableView>

    <!-- Resumen estadísticas -->
    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="5">
            <Label text="Total Goles" />
            <Label fx:id="lblTotalGoles" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <Label text="Total Asistencias" />
            <Label fx:id="lblTotalAsistencias" text="0" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <Label text="Promedio Goles" />
            <Label fx:id="lblPromedioGoles" text="0.0" />
        </VBox>
    </HBox>

</VBox>
