<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="588.0" prefWidth="800" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.scouteo.controller.EstadisticasJugadorController">
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label prefWidth="700" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="ESTADÍSTICAS POR JUGADOR" />
        <Button onAction="#volverDashboard" prefHeight="26.0" prefWidth="81.0" text="← Volver" />
    </HBox>
    
    <Separator />
    
    <!-- Selector de jugador -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Seleccionar Jugador:" />
        <ComboBox fx:id="cmbJugador" prefWidth="250" promptText="Elige un jugador..." />
        <Button onAction="#cargarEstadisticas" text="Cargar Estadísticas" />
    </HBox>
    
    <!-- Tabla de estadísticas -->
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Historial de Partidos" />
    
    <TableView fx:id="tablaEstadisticas" prefHeight="300">
        <columns>
            <TableColumn fx:id="colFecha" prefWidth="100" text="Fecha" />
            <TableColumn fx:id="colRival" prefWidth="150" text="Rival" />
            <TableColumn fx:id="colResultado" prefWidth="80" text="Resultado" />
            <TableColumn fx:id="colMinutos" prefWidth="80" text="Minutos" />
            <TableColumn fx:id="colGoles" prefWidth="60" text="Goles" />
            <TableColumn fx:id="colAsistencias" prefWidth="90" text="Asistencias" />
            <TableColumn fx:id="colTarjetasA" prefWidth="50" text="T.A." />
            <TableColumn fx:id="colTarjetasR" prefWidth="50" text="T.R." />
        </columns>
    </TableView>
    
    <!-- Resumen estadísticas -->
    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #4CAF50; -fx-padding: 15; -fx-background-radius: 5;">
            <Label style="-fx-text-fill: white;" text="Total Goles" />
            <Label fx:id="lblTotalGoles" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="0" />
        </VBox>
        
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2196F3; -fx-padding: 15; -fx-background-radius: 5;">
            <Label style="-fx-text-fill: white;" text="Total Asistencias" />
            <Label fx:id="lblTotalAsistencias" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="0" />
        </VBox>
        
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #FF9800; -fx-padding: 15; -fx-background-radius: 5;">
            <Label style="-fx-text-fill: white;" text="Promedio Goles" />
            <Label fx:id="lblPromedioGoles" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="0.0" />
        </VBox>
    </HBox>
    
</VBox>
