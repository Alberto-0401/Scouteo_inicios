<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" stylesheets="@../scouteo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.scouteo.controller.PartidosController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox fx:id="headerPartidos" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="tituloPartidos" text="GESTIÓN DE PARTIDOS" HBox.hgrow="ALWAYS" />
    </HBox>

    <Separator fx:id="separadorPartidos1" />

    <!-- Botón de acción -->
    <HBox fx:id="accionesPartidos" alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="btnNuevoPartido" mnemonicParsing="true" onAction="#abrirFormularioNuevo" text="+ _NUEVO PARTIDO" />
    </HBox>

    <TableView fx:id="tablaPartidos" prefHeight="400" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colId" maxWidth="40" prefWidth="35" text="ID" />
            <TableColumn fx:id="colFecha" prefWidth="85" text="Fecha" />
            <TableColumn fx:id="colRival" prefWidth="153.60003662109375" text="Rival" />
            <TableColumn fx:id="colResultado" prefWidth="74.39996337890625" text="Resul." />
            <TableColumn fx:id="colLocalVisitante" prefWidth="89.5999755859375" text="Local/Vis." />
            <TableColumn fx:id="colAcciones" minWidth="160" prefWidth="172.800048828125" text="Acciones" />
        </columns>
    </TableView>

    <!-- Footer -->
    <HBox fx:id="footerPartidos" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblTotal" text="Total: 0 partidos" />
    </HBox>

</VBox>
