<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javafx.scouteo.controller.ConvocatoriasController"
      spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="CONVOCATORIAS Y PARTICIPACIONES"/>
    </HBox>

    <Separator/>

    <!-- Filtros y acciones -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Partido:"/>
        <ComboBox fx:id="cmbPartido" prefWidth="250" promptText="Todos los partidos"/>

        <Button text="Filtrar" onAction="#filtrar"/>
        <Button text="Limpiar" onAction="#limpiarFiltro"/>

        <Label prefWidth="100"/>

    </HBox>

    <!-- Tabla de convocatorias/participaciones -->
    <TableView fx:id="tablaConvocatorias" prefHeight="350" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colPartido" prefWidth="130" text="Partido"/>
            <TableColumn fx:id="colFecha" prefWidth="75" text="Fecha"/>
            <TableColumn fx:id="colJugador" prefWidth="110" text="Jugador"/>
            <TableColumn fx:id="colDorsal" prefWidth="45" maxWidth="50" text="Dor"/>
            <TableColumn fx:id="colPosicion" prefWidth="45" text="Pos."/>
            <TableColumn fx:id="colConvocado" prefWidth="75" text="Conv."/>
            <TableColumn fx:id="colTitular" prefWidth="55" text="Tit."/>
            <TableColumn fx:id="colAcciones" prefWidth="110" minWidth="110" text="Acciones"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="lblTotal" text="Total: 0 convocatorias"/>
    </HBox>

</VBox>
