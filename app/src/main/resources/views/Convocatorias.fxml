<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" stylesheets="@../scouteo.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.scouteo.controller.ConvocatoriasController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox fx:id="headerConvocatorias" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="tituloConvocatorias" text="GESTIÃ“N DE CONVOCATORIAS" HBox.hgrow="ALWAYS" />
    </HBox>

    <Separator fx:id="separadorConvocatorias1" />

    <!-- Filtros y acciones -->
    <HBox fx:id="filtrosConvocatorias" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblPartidoConv" text="Partido:" />
        <ComboBox fx:id="cmbPartido" prefWidth="250" promptText="Todos los partidos" />
        <Button fx:id="btnFiltrarConv" onAction="#filtrar" text="Filtrar" />
        <Button fx:id="btnLimpiarConv" onAction="#limpiarFiltro" text="Limpiar" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnNuevaConvocatoria" onAction="#nuevaConvocatoria" text="+ NUEVA CONVOCATORIA" />
    </HBox>

    <!-- Tabla de convocatorias/participaciones -->
    <TableView fx:id="tablaConvocatorias" prefHeight="350" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colPartido" prefWidth="130" text="Partido" />
            <TableColumn fx:id="colFecha" prefWidth="75" text="Fecha" />
            <TableColumn fx:id="colJugador" prefWidth="110" text="Jugador" />
            <TableColumn fx:id="colDorsal" maxWidth="50" prefWidth="45" text="Dor" />
            <TableColumn fx:id="colPosicion" prefWidth="45" text="Pos." />
            <TableColumn fx:id="colConvocado" prefWidth="75" text="Conv." />
            <TableColumn fx:id="colTitular" prefWidth="52.79998779296875" text="Tit." />
            <TableColumn fx:id="colAcciones" minWidth="110" prefWidth="172.0" text="Acciones" />
        </columns>
    </TableView>

    <!-- Footer -->
    <HBox fx:id="footerConvocatorias" alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="lblTotal" text="Total: 0 convocatorias" />
    </HBox>

</VBox>
