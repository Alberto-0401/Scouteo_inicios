<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.javafx.ejercicios.DashboardController"
      spacing="20" style="-fx-padding: 20;" prefWidth="700" prefHeight="650">
    
    <Label text="SCOUTEO - DASHBOARD" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <!-- Resumen en tarjetas -->
    <HBox spacing="15" alignment="CENTER">
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 20; -fx-background-radius: 5;" spacing="5">
            <Label text="Total Jugadores" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
            <Label fx:id="lblTotalJugadores" text="0" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
        </VBox>
        
        <VBox style="-fx-background-color: #4CAF50; -fx-padding: 20; -fx-background-radius: 5;" spacing="5">
            <Label text="Partidos Jugados" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
            <Label fx:id="lblTotalPartidos" text="0" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
        </VBox>
        
        <VBox style="-fx-background-color: #FF9800; -fx-padding: 20; -fx-background-radius: 5;" spacing="5">
            <Label text="Goles Totales" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
            <Label fx:id="lblTotalGoles" text="0" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>
    
    <!-- Gráfico de jugadores por posición -->
    <VBox spacing="10">
        <Label text="Distribución por Posición" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <PieChart fx:id="chartPosiciones" prefHeight="300"/>
    </VBox>
    
    <!-- Botones de navegación -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ver Jugadores" onAction="#irAJugadores" prefWidth="150"/>
        <Button text="Ver Ranking" onAction="#irARanking" prefWidth="150"/>
        <Button text="Ver Estadísticas" onAction="#irAEstadisticas" prefWidth="150"/>
    </HBox>
    
</VBox>