<?xml version="1.0" encoding="UTF-8"?>

<!-- 5. ModalConfirmacion.fxml -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="400" spacing="20" style="-fx-padding: 25; -fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.ejercicios.ModalConfirmacionController">
    
    <!-- Icono de advertencia -->
    <Label style="-fx-font-size: 48px;" text="⚠" />
    
    <!-- Mensaje -->
    <VBox alignment="CENTER" spacing="8">
        <Label fx:id="lblTitulo" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="¿Estás seguro?" />
        <Label fx:id="lblMensaje" style="-fx-text-fill: gray;" text="Esta acción no se puede deshacer" textAlignment="CENTER" wrapText="true" />
    </VBox>r
    
    <!-- Botones -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#cancelar" prefWidth="120" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" text="Cancelar" />
        <Button fx:id="btnConfirmar" onAction="#confirmar" prefWidth="120" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar" />
    </HBox>
    
</VBox>
